# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Jupyter Notebook files
*.ipynb text eol=lf

# Data files
*.csv text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf
